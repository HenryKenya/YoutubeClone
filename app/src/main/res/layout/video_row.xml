<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/videoImage"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/videoTitle"
            app:layout_constraintTop_toBottomOf="@+id/videoImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/channelImage" android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp" android:textStyle="bold"/>
    <TextView
            android:text="Channel Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/channelName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/videoTitle" app:layout_constraintStart_toStartOf="@+id/videoTitle"
            app:layout_constraintEnd_toEndOf="@+id/videoTitle" android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp" android:paddingBottom="20dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/channelImage"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/videoImage"/>
    <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            android:background="#808080" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
