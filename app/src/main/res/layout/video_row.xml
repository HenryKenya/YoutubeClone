<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/videoImage"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintDimensionRatio="16:9" android:layout_marginTop="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/videoTitle"
            app:layout_constraintTop_toBottomOf="@+id/videoImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/channelImage" android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp" android:textStyle="bold" android:textSize="16sp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Channel Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/channelName"
            app:layout_constraintTop_toBottomOf="@+id/videoTitle" app:layout_constraintStart_toStartOf="@+id/videoTitle"
            app:layout_constraintEnd_toEndOf="@+id/videoTitle" android:layout_marginEnd="16dp"
            android:paddingBottom="20dp" android:textSize="14sp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/channelImage"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/videoImage" android:layout_marginTop="16dp"/>
    <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            android:background="#C0C0C0" app:layout_constraintBottom_toBottomOf="parent" android:alpha="0.5"/>
</android.support.constraint.ConstraintLayout>
